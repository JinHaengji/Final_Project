import java.io.*;

import javax.sound.sampled.*;
		
public class Cuttingfile 
{

	public static void main(String[] args) throws UnsupportedAudioFileException, IOException 
	{
		int mil, tho, hun, one = 0;
		
		String type = ".wav";
		String path = "D://졸작//file//wav//test6_1114" + type;
	
		//test6_1114.wav : 28초 
		int totaltime = 0;
		totaltime = (int) totalLength(path); //안전하게 +1초 할까?
		//System.out.println(totaltime);
		
		//totaltime의 맨 앞자리수를 받아와야함.
		//만? 천? 백? 일??? 단위? 
		//1시간 = 3600초
		//3시간 = 10800초
		//고객 상담이니까 최대 3시간으로 가정. 만단위까지만 일단 지원하자
		if(totaltime >= 10000)
			mil = totaltime/10000; //만단위
		else if(totaltime >= 1000)
			//천단위
		else if(totaltime >= 100)
			//백단위
		else if(totaltime >= 10)
			//십단위
		else if(totaltime >= 1)
			//일단위
		else if(totaltime == 0)
			System.out.println("파일이 0초입니다.");
		
		for(int i=0; i<totaltime; i++)
		{
			copyAudio(path, path + (i+1) + type, 0, 10); //출력되는 파일은 원본파일명 끝에 1,2,3... 차례대로 붙음
